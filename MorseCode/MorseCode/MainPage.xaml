<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MorseCode"
             x:Class="MorseCode.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.ColumnSpan="2" Text="" x:Name="MorseDisplay"/>
            <Button Grid.Row="1" Grid.Column="0" Text="." x:Name="BtnDot" Clicked="OnDotButtonClicked" />
            <Button Grid.Row="1" Grid.Column="1" Text="-" x:Name="BtnDash" Clicked="OnDashButtonClicked" />
            <Button Grid.Row="2" Grid.ColumnSpan="2" Text="Space" x:Name="BtnSpace" Clicked="OnSpaceButtonClicked" />
        </Grid>
    </StackLayout>

</ContentPage>
